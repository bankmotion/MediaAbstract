# =============================================================================
# MediaAbstract Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL (found in your Supabase dashboard)
REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anonymous/public key (found in your Supabase dashboard)
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL for development
REACT_APP_API_URL=http://127.0.0.1:10000

# Backend API URL for production
# REACT_APP_API_URL=https://backend.writefor.co

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Stripe publishable key (found in your Stripe dashboard)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# =============================================================================
# EMAIL CONFIGURATION (Nodemailer)
# =============================================================================
# SMTP Host (e.g., Gmail, SendGrid, etc.)
REACT_APP_SMTP_HOST=smtp.gmail.com

# SMTP Port
REACT_APP_SMTP_PORT=587

# SMTP Username/Email
REACT_APP_SMTP_USER=your-email@gmail.com

# SMTP Password or App Password
REACT_APP_SMTP_PASS=your-app-password

# From email address
REACT_APP_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application name
REACT_APP_NAME=MediaAbstract

# Environment (development, staging, production)
REACT_APP_ENV=development

# Debug mode (true/false)
REACT_APP_DEBUG=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_LOGGING=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# =============================================================================
# SECURITY
# =============================================================================
# Session timeout (in minutes)
REACT_APP_SESSION_TIMEOUT=60

# =============================================================================
# NOTES
# =============================================================================
# 1. All environment variables must start with REACT_APP_ to be accessible in React
# 2. Never commit actual API keys or secrets to version control
# 3. Use different values for development, staging, and production
# 4. Keep your .env file secure and never share it publicly
